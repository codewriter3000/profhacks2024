---
import Profile from '../../components/Profile';
import { getShoreTowns, getWaterQualityTestingInfoForCode } from '../../lib/utils';
const { town } = Astro.params;

export async function fetchDynamicData() {
    const shoreTowns = await getShoreTowns()
    return shoreTowns.map(shoreTown => ({
        ...shoreTown,
    }))
}

export async function getStaticPaths() {
  // Fetch dynamic data or define possible values for dynamic parameter
  const dynamicData = await fetchDynamicData();

  // Generate paths based on dynamic data
  const paths = dynamicData.map(item => ({
    params: { town: String(item.municipality_code) }
  }));

  return paths
}

const waterQualityInfo = await getWaterQualityTestingInfoForCode(town)
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Profile</title>
	</head>
	<body class="h-screen w-screen bg-gradient-to-l from-orange-500 to-amber-400 p-6">
		<Profile client:load waterQualityInfo={waterQualityInfo} />
	</body>
</html>
